    /**
     * Store a newly created resource in storage.
     *
     * @param  \Illuminate\Http\Request  $request
     * @return \Illuminate\Http\Response
     */
    public function store(Request $req)
    {
    
        $type = $req->{'catagory'};
        $user_comment = $req->{'username'};
        $text_comment = $req->{'comment'};
        $rate = $req->{'rating'};
        $buy = $req->{'buy'};
        $creat=  date('Y-m-d G:i:s', mktime(0, 0, 0, 7, 1, 2000));
       
        $data=array('type'=>$type,'user_comment'=>$user_comment,'text_comment'=>$text_comment,'rate'=>$rate,'buy'=>$buy,'created_at'=>$creat);
        DB::table('reviews')->insert($data);
        return $data;
        //return "in";
    }

